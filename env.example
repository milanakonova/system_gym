# Настройки приложения
APP_NAME=Gym Management System
APP_VERSION=1.0.0

# База данных PostgreSQL
# Формат: postgresql://user:password@host:port/database_name
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/gym_sistem

# JWT настройки безопасности
# ВАЖНО: Измените SECRET_KEY на случайную строку для production!
# Можно сгенерировать командой: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-please-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS настройки
# Для production укажите конкретные домены через запятую, например: http://example.com,https://www.example.com
# Для разработки можно использовать: *
CORS_ORIGINS=*

# Настройки сервера
HOST=0.0.0.0
PORT=8000
# RELOAD должен быть False для production
RELOAD=False

